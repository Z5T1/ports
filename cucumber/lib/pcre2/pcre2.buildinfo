# Cucumber Linux Buildinfo for pcre

NAME=pcre2
VERSION=10.31
URL=(
	https://downloads.sourceforge.net/pcre/pcre2-10.31.tar.bz2
	https://downloads.sourceforge.net/pcre/pcre2-10.31.tar.bz2.sig
)
BUILDDEPS=()

verify () {
	pkgapi_gpg --verify $NAME-$VERSION.tar.bz2.sig || return 1
}

build () {

	tar -xf "$OWD/$NAME-$VERSION.tar.bz2" || exit 1
	cd $NAME-$VERSION || exit 1

	# Apply any patches located in $OWD/patches
	pkgapi_apply_patches || exit 1

	# Do the actual build
	./configure \
		--prefix=/usr \
		--libdir=/usr/lib${LIBDIRSUFFIX} \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--docdir=/usr/share/doc/pcre2-${VERSION} \
		--enable-unicode \
		--enable-jit \
		--enable-pcre2-16 \
		--enable-pcre2-32 \
		--enable-pcre2grep-libz \
		--enable-pcre2grep-libbz2 \
		--enable-pcre2test-libreadline \
		--disable-static \
		--build=$CUCARCH-cucumber-linux || exit 1
	pkgapi_make || exit 1
	make install DESTDIR=$DESTDIR || exit 1

	# Move the libraries to /lib{$LIBDIRSUFFIX}
	mkdir -pv $DESTDIR/lib${LIBDIRSUFFIX}
	mv -v $DESTDIR/usr/lib${LIBDIRSUFFIX}/libpcre.so.* $DESTDIR/lib${LIBDIRSUFFIX}/
	ln -sfv ../../lib${LIBDIRSUFFIX}/$(readlink $DESTDIR/usr/lib${LIBDIRSUFFIX}/libpcre.so) $DESTDIR/usr/lib${LIBDIRSUFFIX}/libpcre.so

	# Strip all of the binaries and libraries in $DESTDIR/ of their
	# debugging symbols.
	pkgapi_strip

	# Copies ths install scripts (slack-desc and doint.sh) from $OWD to
	# $DESTDIR/install, creating $DESTDIR/install if need be.
	pkgapi_copy_package_scripts

}

